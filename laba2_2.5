//	Удалить в строке все символы между скобками

#include "stdafx.h"

#define N 100

int main()
{
	int *c, c2, c1 = 0;
	int arr[N];

	c2 = Input_mass(arr);

	//проверка скобок 
	for (int i = 0; i < c2; ++i)
	{
		c = arr[i];
		if (c == '(')
			c1++;
		else if (c == ')') {
			arr[i] = -2;
			c1--;
		}
		if (c1 == -1)
			break;
		if (c1 > 0) {
			arr[i] = -2;
		}
	}	
	if (c1 != 0) {
		printf("\n-1-\n");
		exit();
	}
	Print_mass(arr);
}
//---------------------------------------------------------
int Input_mass(int *arr) //	чтение мессива
{
	int c, i = 0;

	while ((c = getchar()) != EOF) {
		arr[i] = c;
		++i;
	}
	return i;
}
//---------------------------------------------------------
int Print_mass(int *arr) //вывод массива
{
	int i = 0;

	while (arr[i] != '\n') {
		if (arr[i] == -2) {
			++i;
			continue;
		}
		putchar(arr[i]);
		++i;
	}
	printf("\n");
	return NULL;
}
